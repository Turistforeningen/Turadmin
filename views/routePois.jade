            div.panel.panel-default
                div.panel-heading
                    h4.panel-title
                        a(data-toggle="collapse" data-parent="#route-pois-accordion" href="#route-pois-accordion-1") Utsikten

                div#route-pois-accordion-1.panel-collapse.collapse
