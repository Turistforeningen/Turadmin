            div.panel.panel-default
                div.panel-heading
                    h4.panel-title
                        a(data-toggle="collapse" data-parent="#route-pois-accordion" href="#route-pois-accordion-2") Bekken

                div#route-pois-accordion-2.panel-collapse.collapse.in
                    div.panel-body.
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">

                                <h5>Om stedet</h5>

                                <form class="form-horizontal" role="form">
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-4 control-label">Navn</label>
                                        <div class="col-sm-8">
                                            <input type="email" class="form-control" id="inputEmail3" placeholder="Navn på sted">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-4 control-label">Kategori</label>
                                        <div class="col-sm-8">
                                            <select class="form-control">
                                                <option value="0">Velg en</option>
                                                <option value="1">Fjelltopp</option>
                                                <option value="2">Bro</option>
                                                <option value="3">Bekk</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-4 control-label">Er også</label>
                                        <div class="col-sm-8">
                                            <input type="email" class="form-control" id="inputEmail3" placeholder="Replace with multiselect">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-4 control-label">Beskrivelse</label>
                                        <div class="col-sm-8">
                                            <textarea class="form-control" rows="5"></textarea>
                                        </div>
                                    </div>
                                </form>

                            </div>

                            <div class="col-lg-6 col-md-6 col-sm-6">

                                <h5>Bilder</h5>

                                <div class="alert alert-info">
                                    <strong>Ingen bilder!</strong>
                                    Du har ikke lagt inn noen bilder for denne turen.
                                </div>

                                <div class="currentRouteImages selectableImages">
                                    <h6>Dine bilder fra denne turen</h6>

                                    <div class="row">
                                        <div class="col-sm-3">
