script(type="text/template" id="listRouteItemTemplate").
    <td class="route-title">
        <span>
            <% if (typeof navn != 'undefined') { %><%= navn %><% } else { %><em>Tur uten navn</em><% } %>
        </span>
    </td>
    <td>
        <span class="label <%if (status === "Kladd") { %>label-warning<% } else { %>label-success<% } %>">
            <%= erPublisert %>
        </span>
    </td>
    <td>
        <span><%= endret %></span>
    </td>
    <td>
        <%if (status === "Kladd") { %>
            <a href="#" data-action="route-publish">Publiser</a>
        <% } else { %>
            <a href="#" data-action="route-unpublish">Avpubliser</a>
        <% } %>
        </a>
    </td>
    <td>
        <a id="deleteRoute" data-action="route-delete-modal-open">Slett</a>
        <div class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Slette tur?</h4>
                    </div>
                    <div class="modal-body">
                        <p>
                            Er du sikker på at du vil slette turen
                            <span data-placeholder-for="route-name">
                                <% if (typeof navn != 'undefined') { %><%= navn %><% } else { %>Tur uten navn<% } %>
                            </span>
                            ?
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Avbryt</button>
                        <button type="button" class="btn btn-primary" data-action="route-delete">Slett</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </td>


script(type="text/template" id="selectOptionsTemplate").

    <option value=<%= selectOptions.user %>>Mine turer</option>
    <optgroup value="groups" label="Turer tilhørende mine grupper">
    <% _.each(selectOptions.groups, function(element) { %>
        <option value=<%= element.object_id %>><%= element.navn %></option>
    <% }); %>
    </optgroup>


script(type="text/template" id="template-index-paginator").
    <ul class="pagination">
        <li <% if (state.prevPageSkip === false) { %> class="disabled"<% } %>><a<% if (state.prevPageSkip !== false) { %> data-paginator=<%= (state.currentPage - 1) %><% } %>>&laquo;</a></li>
        <% for (var page = 1; page <= state.totalPages; page++) { %>
        <li<% if (page == state.currentPage) { %> class="active"<% } %>><a data-paginator=<%= page %>><%= page %></a></li>
        <% } %>
        <li <% if (state.nextPageSkip === false) { %> class="disabled"<% } %>><a<% if (state.nextPageSkip !== false) { %> data-paginator=<%= (state.currentPage + 1) %><% } %>>&raquo;</a></li>
    </ul>
