script(type="text/template" id="listRouteItemTemplate").
    <td class="route-title">
        <span><%= navn %></span>
    </td>
    <td>
        <span>N/A</span>
    </td>
    <td>
        <span class="label
        <%if (status === "Kladd") { %>
            label-success
        <% } else { %>
            label-info
        <% } %>
        ">
            <%= erPublisert %>
        </span>
    </td>
    <td>
        <span><%= endret %></span>
    </td>
    <td>
        <a id="publishRoute" href="#">
        <%if (status === "Kladd") { %>
            Publiser
        <% } else { %>
            Avpubliser
        <% } %>
        </a>
    </td>
    <td>
        <a id="deleteRoute" data-action="route-delete-modal-open">Slett</a>
        <div class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Slette tur?</h4>
                    </div>
                    <div class="modal-body">
                        <p>Er du sikker p√• at du vil slette turen <span data-placeholder-for="route-name"><%= navn %></span>?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Avbryt</button>
                        <button type="button" class="btn btn-primary" data-action="route-delete">Slett</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </td>


